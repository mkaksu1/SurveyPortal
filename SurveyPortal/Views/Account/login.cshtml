@model dynamic

@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "_Layout"; // Varsayılan layout'u kullanın
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient-primary text-white text-center py-4">
                    <h3><i class="fas fa-sign-in-alt me-2"></i>Giriş Yap</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-controller="Account" asp-action="Login" method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                <input type="email" class="form-control" id="email" name="email" required />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Şifre</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input type="password" class="form-control" id="password" name="password" required />
                            </div>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Giriş Yap</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <p class="mb-0">Hesabınız yok mu? <a asp-controller="Account" asp-action="Register" class="text-decoration-none">Kayıt Ol</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Font Awesome Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<!-- Custom CSS -->
<style>
    .bg-gradient-primary {
        background: linear-gradient(45deg, #007bff, #00bfff);
    }

    .card {
        border-radius: 15px;
    }

    .form-control {
        border-radius: 10px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        border-radius: 10px;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .input-group-text {
        background-color: #e9ecef;
        border: none;
        border-radius: 10px 0 0 10px;
    }
</style>