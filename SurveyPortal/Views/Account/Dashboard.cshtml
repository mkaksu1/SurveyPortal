@{
    Layout = "_AdminLayout";
}

<h1 class="h3 mb-4 text-gray-800">Admin Sayfası</h1>

<div class="row">
    <div class="col-xl-12">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            Hoş Geldiniz! 🎉
                        </div>
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Yönetim panelinize erişiminiz başarıyla sağlandı.
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-smile fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div id="divResult"></div>
    </div>
</div>

@section Scripts {
    <script>
        // HUB Bağlantı
        var connectionHub = new signalR.HubConnectionBuilder()
            .withUrl("/general-hub", signalR.HttpTransportType.WebSockets)
            .configureLogging(signalR.LogLevel.Information)
            .build();

        // start connection
        function fullfilled() {
            console.log("Bağlantı Başarılı");
        }
        function rejected() {
            console.log("Bağlantı Hatalı");
        }
        connectionHub.start().then(fullfilled, rejected);
    </script>
}