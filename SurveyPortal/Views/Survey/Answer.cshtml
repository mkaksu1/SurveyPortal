@model SurveyPortal.Models.Survey

<h1>@Model.Title</h1>
<p>@Model.Description</p>

<form asp-action="Answer" method="post">
    <input type="hidden" name="surveyId" value="@Model.Id" />

    @for (int i = 0; i < Model.Questions.Count; i++)
    {
        <div class="form-group">
            <label>@Model.Questions.ToList()[i].Text</label>
            <input type="text" class="form-control" name="responses" required />
        </div>
    }

    <button type="submit" class="btn btn-primary">Gönder</button>
</form>